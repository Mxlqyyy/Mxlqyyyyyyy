<LLabel@Label>:
    font_name: 'Lobster-Regular.ttf'
    color: 'grey'
<Osnova>:
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: 'MAIN'
<Saww>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.8, 0.8
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        LLabel:
            text: 'Next Level'
            font_size: '70sp'
        LLabel:
            text: "Name:"
        TextInput:
            id: username_input
            multiline: False
        LLabel:
            text: 'Password:'
        TextInput:
            id: password_input
            multiline: False
            password: True
        Button:
            text: 'Login'
            on_press: root.login(username_input.text, password_input.text)
<UserInfo>:
    LLabel:
        id: user_info_label
        text: "Welcome, username!"
        font_size: '30sp'
        color: 'blue'
    Button:
        text: 'Logout'
        on_press: root.manager.current = 'saww'